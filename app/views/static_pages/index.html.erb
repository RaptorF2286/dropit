    <%= link_to  '+', new_post_path %>
  <% end %>
<% end %>
<% provide(:action_left) do %>
  <%= link_to '⌂', dashboard_index_path %>
<% end %>
<section class="blogTiles">
  <div class="container">
    <div class="">
      <div class="row">
        <%= render @posts %>
        <div class="col-sm-4 col-md-3">
          <div class="tileLast">
            <span>“Always pass on what you have learned.”</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
